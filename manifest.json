{
    "manifest_version" : 3,
    "name": "SDP CareerExporter",
    "version": "1.2",
    "description": "Export ULaval SDP job offers to CSV in one click. Track job applications efficiently.",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "SDP CareerExporter",
        "default_icon": {
            "16": "sdp-logo-16.png",
            "48": "sdp-logo-48.png",
            "128": "sdp-logo-128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://www.sdp.ulaval.ca/emplois-stages/compte/recherche/*"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "sdp-logo-16.png",
        "48": "sdp-logo-48.png",
        "128": "sdp-logo-128.png"
    }
}